<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyApp">
    <RelativeLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:layout_marginTop="25dp"
            android:text="Главная"
            android:textSize="32sp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/new_black"
            />

    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="736dp"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/frame1"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="348dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="326dp"
                android:layout_height="48dp"
                android:textStyle="bold"
                android:text="Отправляйте денежные переводы зарубеж"
                android:textSize="20sp"
                android:gravity="center" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="216dp"
                android:layout_height="216dp"
                android:src="@drawable/humo" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/send"
                android:layout_width="320dp"
                android:layout_height="52dp"
                android:background="@drawable/button"
                android:layout_marginStart="19dp"
                android:layout_marginTop="10dp"
                android:text="Отправить перевод"
                android:textSize="16sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="89dp"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"

            >
        <ImageView
            android:id="@+id/image"
            android:layout_width="62.22dp"
            android:layout_height="62.22dp"
            android:src="@drawable/bell"
            android:layout_marginStart="5.89dp"
            android:layout_marginTop="5.89dp" />
        <TextView
            android:layout_width="262dp"
            android:layout_height="19dp"
            android:text="Доступно обновление"
            android:textColor="@color/new_black"
            android:textStyle="bold"
            android:textSize="16dp" 
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="262dp"
                android:layout_height="34dp"
                android:layout_marginTop="24dp"
                android:text="Получите новые возможности для денежных переводов!"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/grey" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="178dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="204dp"
            android:layout_height="24dp"
            android:text="Популярные страны"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/first_country"
                android:layout_width="116dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tj"
                    android:layout_margin="12dp"
                    />
                <TextView
                    android:layout_width="92sp"
                    android:layout_height="17sp"
                    android:text="Таджикистан"
                    android:textStyle="bold"
                    android:textColor="@color/new_black"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="12dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/second_country"
                android:layout_width="116dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="130dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rus"
                    android:layout_margin="12dp"
                    />
                <TextView
                    android:layout_width="92sp"
                    android:layout_height="17sp"
                    android:text="Россия"
                    android:textStyle="bold"
                    android:textColor="@color/new_black"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="12dp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/third_country"
                android:layout_width="116dp"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="16dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/uz"
                    android:layout_margin="12dp"
                    />
                <TextView
                    android:layout_width="92sp"
                    android:layout_height="17sp"
                    android:text="Узбекистан"
                    android:textStyle="bold"
                    android:textColor="@color/new_black"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="12dp" />
            </androidx.cardview.widget.CardView>



        </RelativeLayout>


        </LinearLayout>
        



    </androidx.cardview.widget.CardView>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>